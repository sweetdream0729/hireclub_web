- if @user_completion.percent_complete < 90
  .card.mt-4{:style => "width: 22rem;"}
    .card-block
      %h5.card-title
        Complete Your Profile
        %small.text-muted
          #{@user_completion.percent_complete}%

      %p.card-text 
        .progress
          .progress-bar.bg-success.user_progress{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "25", :role => "progressbar", :style => "width: #{@user_completion.percent_complete}%; height: 8px;"}
      %p.card-text
        %a.btn.btn-info.btn-block{href: next_user_completion_path(@user_completion)}
          = @user_completion.next_step

    / %ul.list-group.list-group-flush
    /   %li.list-group-item Cras justo odio
    /   %li.list-group-item Dapibus ac facilisis in
    /   %li.list-group-item Vestibulum at eros
    