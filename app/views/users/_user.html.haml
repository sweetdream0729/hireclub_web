= cache [user] do
  .media
    = link_to image_tag(model_image(user.avatar, 200, 200, true), width: 52, class: 'd-flex mr-3 rounded-circle'), user
    .media-body
      %h5.mt-0
        = link_to user.name, user
        - if user.is_available
          %small
            %i.fa.fa-briefcase.text-success
      %small
        - user.user_roles.by_position.limit(3).each_with_index do |user_role, index|
          %span.user_role
            = link_to "#{user_role.name}", user_role.role
            ·
            
        = "#{user.location.name} · " if user.location.present?
        = "#{pluralize(user.years_experience, 'Year')} Experience"
  %hr
