- title "#{@user.display_name}"
.container

  .row
    .column
      %h1.mb-0
        = @user.display_name
  .row
    .column
      - @user.user_roles.by_position.each_with_index do |user_role, index|
        %span.user_role
          = user_role.name
          - comma = index < (@user.user_roles.count - 1) ? " · " : ""
          = comma
      - if @user.location.present?
        ·
        = @user.location.display_name
      ·
      = @user.email
      %hr
    
  .row
    .column.column-55
      %h5.mt-3.mb-1
        = @user.bio
  .row
    .column.column-55
      %section
        %h6 Milestones
      - @milestones.each do |milestone|
        .milestone
          %strong
            = milestone.company.try(:name)
          %small.text-muted
            = milestone.start_date.strftime("%b %Y")

          - if milestone.end_date
            %span
              = "-"   
            %small.text-muted
              = milestone.end_date.try(:strftime, "%b %Y")
        %p
          = milestone.title

      / %section
      /   %h6 Projects
        
    .column.column-35.column-offset-10
      %section
        %h6 Skills
        - @user.user_skills.by_position.each do |user_skill|
          .row.mb-05
            .column.column-70
              = user_skill.name
            .column.column-30
              .text-right
                %small.text-muted
                  = pluralize(user_skill.years, "Year") if user_skill.years > 0
      %section
        %h6 Links
        - if @user.website_url
          .mb-1
            = link_display(@user.website_url)
        .mb-1
          = link_display(user_url(@user))
        - if @user.linkedin_url
          .mb-1
            = link_display(@user.linkedin_url)
        - if @user.twitter_url
          .mb-1
            = link_display(@user.twitter_url)
        - if @user.dribbble_url
          .mb-1
            = link_display(@user.dribbble_url)
        - if @user.github_url
          .mb-1
            = link_display(@user.github_url)
        - if @user.medium_url
          .mb-1
            = link_display(@user.medium_url)

          

