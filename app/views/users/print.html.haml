- title "#{@user.display_name}"
.two_thirds
  %h1= @user.display_name
  - @user.user_roles.by_position.each_with_index do |user_role, index|
    %span.user_role
      = user_role.name
      - comma = index < (@user.user_roles.count - 1) ? " Â· " : ""
      = comma

  %section
    %h3 Milestones

  %section
    %h3 Projects
    
  %section
    %h3 Links
    = @user.website_url
.one_third
  %section
    %h3 Skills
    - @user.user_skills.by_position.each do |user_skill|
      .user_skill
        = user_skill.name
        %span.user_skill_year.text-muted
          = pluralize(user_skill.years, "year")
