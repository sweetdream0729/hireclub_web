.container.content_container  
  %h1
    = title "Members"
  .dropdown
    %button#dropdownMenuButton.btn.btn-secondary.btn-sm.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
      - if params[:sort_by]
        = params[:sort_by].titlecase
      - else
        Recent
    .dropdown-menu{"aria-labelledby" => "dropdownMenuButton"}
      %a.dropdown-item{href: members_path } Recent
      %a.dropdown-item{href: members_path(sort_by: "popular")} Popular
      %a.dropdown-item{href: members_path(sort_by: "alphabetical")} Alphabetical
      %a.dropdown-item{href: members_path(sort_by: "oldest")} Oldest
  %p
    %small
      = pluralize(User.all.count, "member")

  = render partial: "users/user", collection: @users 

  = paginate @users


  
