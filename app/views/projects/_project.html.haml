.col-sm-6.col-md-4.project
  .card
    = link_to project_path(project) do
      %img.card-img-top{:alt => project.name, :src => model_image(project.image, 800, 600, true), width: "100%",data: {toggle:"tooltip", placement: "bottom"}, title: truncate(project.description, length: 160) }

    .card-block
      %p.card-text
        = link_to project.name, project_path(project) if project.name.present?
        - if project.link.present?
          = link_to project.link, target: "_blank" do
            %i.fa.fa-external-link

        - if policy(project).edit?
          = link_to edit_project_path(project), class: "edit_user_projects ml-1 mr-1 display_none text-muted hover_primary " do
            %i.fa.fa-pencil

        - if policy(project).destroy?
          = link_to project_path(project), method: :delete, data: { confirm: "Remove #{project.name} project?" }, remote: true, class: "delete_user_projects display_none text-muted hover_danger" do
            %i.fa.fa-trash-o