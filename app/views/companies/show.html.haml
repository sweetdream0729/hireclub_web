= title @company.name
.container.mt-5.mb-5

  %h1.black
    = @company.name
    %small
      = link_to 'Edit', edit_company_path(@company), class: "btn btn-primary btn-sm" if policy(@company).edit?
  
  - if @company.tagline.present?
    %h4
      = @company.tagline
  

  - if @company.website_url.present?
    %p
      = link_to @company.website_url, @company_website_url
  %p.mt-4
    - if @company.facebook_url.present?
      = link_to @company.facebook_url do
        %i.fa.fa-facebook.ml-2
    - if @company.twitter_url.present?
      = link_to @company.twitter_url do
        %i.fa.fa-twitter.ml-2
    - if @company.instagram_url.present?
      = link_to @company.instagram_url do
        %i.fa.fa-instagram.ml-2
    - if @company.angellist_url.present?
      = link_to @company.angellist_url do
        %i.fa.fa-angellist.ml-2
