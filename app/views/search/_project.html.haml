= cache [project] do
  - user = project.user
  .media
    = link_to image_tag(model_image(project.image, 800, 600, true), width: 200, class: 'd-flex mr-3 rounded'), project
    .media-body
      %h5.mt-0
        = link_to project.name, project
      %small
        .media
          = link_to image_tag(model_avatar(user.avatar, 200, true), width: 24, class: 'd-flex mr-1 rounded-circle'), user
          .media-body
            = link_to user.display_name, user
            - if project.company
              ·
              = link_to project.company.name, project.company
            - if project.skills_list.present?
              ·
              = project.skills_list
              

  %hr
