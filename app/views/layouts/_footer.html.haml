%footer
  .container.text-white
    .row
      .col-sm-3.mb-4
        %a{href: root_path}
          %h6.black.text-white HireClub
        %ul.nav.flex-column
          - if user_signed_in? && current_user.is_admin
            %li.nav-item
              = link_to "Admin", rails_admin_path

          %li.nav-item
            = link_to "Find Jobs", jobs_path
          %li.nav-item
            = link_to "Post Job", new_job_path
          
      .col-sm-3.mb-4
        %h6 Features
        %ul.nav.flex-column
          %li.nav-item
            = link_to "Events", events_path
          %li.nav-item
            = link_to "Members", members_path
          %li.nav-item
            = link_to "Companies", companies_path
          %li.nav-item
            = link_to "Stories", stories_path
          %li.nav-item
            = link_to "Skills", skills_path
          %li.nav-item
            = link_to "Roles", roles_path
          %li.nav-item
            = link_to "Badges", badges_path

      .col-sm-3.mb-4
        %h6 Company
        %ul.nav.flex-column
          %li.nav-item
            = link_to "About", about_path
          %li.nav-item
            = link_to "Heroes", heroes_path
          %li.nav-item
            = link_to "Privacy", privacy_path
          %li.nav-item
            = link_to "Styles", styles_path
            
      .col-sm-3.mb-4
        %h6 Contact
        %ul.nav.flex-column
          %li.nav-item
            = link_to "Help", "mailto:help@hireclub.com"
          %li.nav-item
            = link_to "Get Coaching", helpers_path
          %li.nav-item
            = link_to "https://facebook.com/groups/hireclub" do
              %span.fa-stack
                %i.fa.fa-square-o.fa-stack-2x
                %i.fa.fa-facebook.fa-stack-1x
              Facebook
          %li.nav-item
            = link_to "https://twitter.com/hireclub" do
              %span.fa-stack
                %i.fa.fa-square-o.fa-stack-2x
                %i.fa.fa-twitter.fa-stack-1x
              Twitter
          %li.nav-item
            = link_to "https://instagram.com/hireclub" do
              %span.fa-stack
                %i.fa.fa-square-o.fa-stack-2x
                %i.fa.fa-instagram.fa-stack-1x
              Instagram


