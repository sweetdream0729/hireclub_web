                     <tr>
                        <td align="left" valign="top">
                          <a href="<%= @invite_url %>" style="font-family: 'Source Sans Pro', Arial, Tahoma, Geneva, sans-serif; color: #A9BCD0; font-size: 17px; line-height: 22px; font-weight: 600; text-transform: uppercase; text-decoration: none">
                              <% if @invite.recipient.present? %>
                                 <%= @user.display_name %> sent you their HireClub Profile!
                              <% else %>
                                 <%= @user.display_name %> invited you to HireClub!
                              <% end %>
                           </a>
                           <div style="height: 28px; line-height: 28px; font-size: 26px;">&nbsp;</div>
                        </td>
                     </tr>
                  </table>

                  <table cellpadding="0" cellspacing="0" border="0" width="65%" style="width: 65% !important; min-width: 270px; max-width: 65%; border-width: 1px; border-style: solid; border-color: #e5e5e5; border-radius: 5px;">
