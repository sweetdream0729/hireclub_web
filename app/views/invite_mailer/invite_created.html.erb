                        <td width="15" style="width: 15px; max-width: 15px; min-width: 15px;">&nbsp;</td>
                        <td align="center" valign="top">

                           <%= render partial: "/email/elements/v_spacer", locals: { height: 38} %>
                           
                           <a href="<%= @invite_url %>" style="display: block; max-width: 100px;">
                              <img src="<%= model_avatar(@user.avatar, 200, true) %>" alt="img" width="100" border="0" style="display: block; width: 100px; border-radius: 100px;" />
                           </a>

                           <%= render partial: "/email/elements/v_spacer", locals: { height: 15} %>

                           <a href="<%= @invite_url %>" style="font-family: 'Source Sans Pro', Arial, Tahoma, Geneva, sans-serif; color: #1a1a1a; font-size: 19px; line-height: 25px; font-weight: 600; text-decoration: none;">
                              <font face="'Source Sans Pro', sans-serif" color="#1a1a1a" style="font-size: 19px; line-height: 25px; font-weight: 600; text-decoration: none;">
