- user = activity.owner
- company = activity.trackable

= render partial: "/public_activity/header", locals: {activity: activity, text: "followed #{link_to company.name, company}"}

.media
  = link_to image_tag(company_avatar(company.avatar, 200, true), width: 100, class: 'd-flex mr-3 rounded'), company
  .media-body
    %h5.mt-0
      = link_to company.name, company
    %p.mt-3
      = link_to_follow_company(company, active_user)
