- user = activity.owner

= render partial: "/public_activity/header", locals: {activity: activity, text: "joined HireClub!"}

.media
  = link_to image_tag(model_avatar(user.avatar, 200, true), width: 100, class: "d-flex align-self-center mr-3 rounded-circle"), user
  .media-body
    %h5.mt-0
      = link_to user.display_name, user
      %small
        = render partial: "/users/icons", locals: {user: user}

    - if user.user_roles.any?
      = user.user_roles.by_position.first.name

    - if user.company.present?
      ·
      = user.company.name

    - if user.location.present?
      ·
      = user.location.name
    = "· #{display_years(user.years_experience)} Experience"

    %p.mt-3
      = link_to_follow_user(user, active_user)

