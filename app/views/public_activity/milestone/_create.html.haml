- user = activity.owner
- milestone = activity.trackable
.media.mb-2
  = render partial: "/public_activity/user_avatar", locals: {user: user}
  .media-body
    = link_to user.display_name, user
    added milestone
    = link_to "#{truncate(milestone.name, length: 40)} - #{milestone.start_date.strftime("%b %Y")}", milestone
    
    = render partial: "/public_activity/time_ago", locals: {activity: activity}
    
    