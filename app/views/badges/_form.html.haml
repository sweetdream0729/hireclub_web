= form_for @badge do |f|
  - if @badge.errors.any?
    #error_explanation
      %h2= "#{pluralize(@badge.errors.count, "error")} prohibited this badge from being saved:"
      %ul
        - @badge.errors.full_messages.each do |msg|
          %li= msg
  .row
    .col-6
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control', autocomplete: :off
      .form-group
        = f.label :slug
        = f.text_field :slug, class: 'form-control'
      .form-group
        = f.label :description
        = f.text_field :description, class: 'form-control'
      .form-group
        = f.label :earned_by
        = f.text_field :earned_by, class: 'form-control'
      .form-group
        = f.label :position
        = f.number_field :position, class: 'form-control'

    .col-6
      .form-group
        = f.label 'Avatar'
        %br
        = image_tag(model_image(@badge.avatar, 200, 200, true), width: 100, class: 'm-b-1')
        %br
        = f.file_field :avatar
        = f.hidden_field :retained_avatar
        = f.text_field :avatar_url, class: 'form-control', placeholder: "http://site.com/image.jpg"

  
  %hr
  = f.submit 'Save', class: 'btn btn-primary btn-lg'
