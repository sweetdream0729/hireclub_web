= form_for @skill do |f|
  - if @skill.errors.any?
    #error_explanation
      %h2= "#{pluralize(@skill.errors.count, "error")} prohibited this skill from being saved:"
      %ul
        - @skill.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control', autocomplete: :off
    .form-control-feedback.text-warning
      There is already the skill
      %span#existing_skill
        Skill Name

  = f.submit 'Save', class: "btn btn-primary"
