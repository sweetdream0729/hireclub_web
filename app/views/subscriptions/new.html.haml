- content_for :head do
  %script{:src => "https://js.stripe.com/v3/", :type => "text/javascript"}
  
.container.content_container
  .row
    .col-12
      %h1= title "Become A Hero"
      %p.lead
        For just $5 a month, show your support for HireClub.
  .row
    .col-6
      .mt-2
        = form_for @subscription, url: subscriptions_path, method: :post do |f|
          = render 'card_form'
          %br
          %br
          = f.submit "Subscribe", id: 'subscribe_btn', class: 'btn btn-lg btn-primary btn-block'
         

