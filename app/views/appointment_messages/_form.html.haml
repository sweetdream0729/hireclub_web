- if user_signed_in?
  = form_for [@appointment_message],remote: !@appointment_message.new_record? do |f|
    = f.hidden_field :appointment_id
    .form-group
      = f.text_area :text, class: "form-control at_who_mentions", placeholder: "Message"
    - if params[:action] == "edit"
      = f.submit "Update", class: "btn btn-primary btn-sm"
      = link_to "cancel", cancel_edit_appointment_message_path(id: @appointment_message.id), class: 'btn btn-secondary btn-sm',remote: true
    - else
      = f.submit "Send", class: "btn btn-primary"
