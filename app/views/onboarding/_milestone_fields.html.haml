.nested-fields
  .row
    .col-7
      .form-group{class: ('has-danger' if f.object.errors.any?)}
        = f.label :milestone
        = link_to_remove_association f, class: "btn btn-default btn-sm" do
          .text-danger
            %i.fa.fa-trash-o
        = f.text_field :name, class: "form-control form-control-sm", placeholder: "Founded HireClub with 25 of my friends",maxlength: 140

        - if f.object.errors.any?
          .form-control-feedback
            = f.object.errors.messages.first[1][0]
    .col-5
      .form-group
        = f.label "Date"
        %br
        = f.text_field :start_date, value: "#{f.object.start_date.strftime("%d/%m/%Y") unless f.object.new_record?}", class: 'datepicker', style: "width:100%;"
    