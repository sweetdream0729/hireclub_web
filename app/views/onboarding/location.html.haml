- set_meta_tags title: "Where you at?"

= render "nav"

.container.mt-3.mb-5
  .row.justify-content-center
    .col-lg-6.col-md-8.col-sm-10
      .progress.mb-4
        .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "25", :role => "progressbar", :style => "width: 20%;height: 5px;"}

      %h1 ðŸ—¿ Where you at?

      = form_for @user, url: wizard_path, method: :put do |f|
        .form-group
          = f.text_field :location, class: "form-control form-control-lg autocomplete_location", value: @user.location.try(:display_name), placeholder: "My City, CA", autocomplete: "off"
          %small.form-text.text-muted 
            Choose your city
          = f.hidden_field :location_id, value: @user.location_id, class: "autocomplete_location_id"

        = f.submit "Next", class: "btn btn-primary btn-lg btn-block"