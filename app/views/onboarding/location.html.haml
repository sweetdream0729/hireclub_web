= title "Where you at?"

.container.mt-5.mb-5
  .row.justify-content-center
    .col-lg-6.col-md-8.col-sm-10
      %h1 Where you at?

      = form_for @user, url: wizard_path, method: :put do |f|
        .form-group
          = f.text_field :location, class: "form-control form-control-lg", value: @user.location.try(:display_name), placeholder: "San Francisco, CA"
          %small.form-text.text-muted 
            Choose your city
          = f.hidden_field :location_id, value: @user.location_id

        = f.submit "Next", class: "btn btn-primary btn-lg"

