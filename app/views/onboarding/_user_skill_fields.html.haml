.nested-fields
  .row
    .col-7
      .form-group
        = f.label :skill
        = f.text_field :skills, class: "form-control user_skill_list", value: f.object.skill.present? ? f.object.skill.name : '', placeholder: "Design"
        = f.hidden_field :skill_id, class: "user_skill_list_id", value: f.object.skill.present? ? f.object.skill_id : ''

    .col-3
      .form-group
        = f.label :years
        = f.number_field :years, class: "form-control", min: 0, max: 50
    .col-1
      .form-group
        %label
          &nbsp;
        = link_to_remove_association f, class: "btn btn-default" do
          .text-danger
            %i.fa.fa-trash-o


:coffeescript
  if(window.initilize_typehead)
    $('.user_skill_list').typeahead('destroy');
    window.initilize_typehead();

